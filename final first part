    strip[28] = (0,0,0)
    strip[36] = (0,0,0)
    strip[44] = (0,0,0)
    strip[82] = (0,0,0)
    strip[91] = (0,0,0)
    strip[99] = (0,0,0)
    strip[107] = (0,0,0)
    strip[13] = (0,0,0)
    strip[73] = (0,0,0)
    strip[92] = (0,0,0)
    strip[108] = (0,0,0)
    strip[27] = (0,0,0)
    strip[43] = (0,0,0)
    strip.write()
