
# Tutorial 2.5
# CircuitPython demo - NeoPixel

import time

import board
import neopixel

pixpin = board.A3
numpix = 128

strip = neopixel.NeoPixel(pixpin, numpix, brightness=0.1, auto_write=False)

while True:

    # set brightness to a high value.  1.0 is the maximum value, 0.0 is the lowest
    strip.brightness = 0.01

    strip[14] = (255,128,0)
    strip[22] = (255,128,0)
    strip[23] = (255,128,0)
    strip[80] = (255,128,0)
    strip[81] = (255,128,0)
    strip[29] = (255,128,0)
    strip[30] = (255,128,0)
    strip[31] = (255,128,0)
    strip[88] = (255,128,0)
    strip[89] = (255,128,0)
    strip[90] = (255,128,0)
    strip[37] = (255,128,0)
    strip[38] = (255,128,0)
    strip[39] = (255,128,0)
    strip[96] = (255,128,0)
    strip[97] = (255,128,0)
    strip[98] = (255,128,0)
    strip[45] = (255,128,0)
    strip[46] = (255,128,0)
    strip[47] = (255,128,0)
    strip[104] = (255,128,0)
    strip[105] = (255,128,0)
    strip[106] = (255,128,0)
    strip[54] = (255,128,0)
    strip[55] = (255,128,0)
    strip[112] = (255,128,0)
    strip[113] = (255,128,0)
    strip[14] = (255,255,0)
    strip[74] = (255,255,0)
    strip[21] = (255,128,0)
    strip[28] = (255,128,0)
    strip[36] = (255,128,0)
    strip[44] = (255,128,0)
    strip[82] = (255,128,0)
    strip[91] = (255,128,0)
    strip[99] = (255,128,0)
    strip[107] = (255,128,0)
    strip[13] = (255,128,0)
    strip[73] = (255,128,0)
    strip.write()
    time.sleep(0.2)

    strip[30] = (0,76,153)
    strip[90] = (0,76,153)
    strip[92] = (102,52,0)
    strip[108] = (102,52,0)
    strip[27] = (102,52,0)
    strip[43] = (102,52,0)
    strip[96] = (102,52,0)
    strip[47] = (102,52,0)
    strip[105] = (102,52,0)
    strip.write()
    time.sleep(0.2)

    strip[14] = (0,0,0)
    strip[22] = (0,0,0)
    strip[23] = (0,0,0)
    strip[80] = (0,0,0)
    strip[81] = (0,0,0)
    strip[29] = (0,0,0)
    strip[30] = (0,0,0)
    strip[31] = (0,0,0)
    strip[88] = (0,0,0)
    strip[89] = (0,0,0)
    strip[90] = (0,0,0)
    strip[37] = (0,0,0)
    strip[38] = (0,0,0)
    strip[39] = (0,0,0)
    strip[96] = (0,0,0)
    strip[97] = (0,0,0)
    strip[98] = (0,0,0)
    strip[45] = (0,0,0)
    strip[46] = (0,0,0)
